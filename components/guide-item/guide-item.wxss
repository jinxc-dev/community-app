.banner-container {
    display: inline-block;
    width: 100%;
    height: 180rpx;
    /* border: 5rpx solid #f7f7f7; */
    /* border-radius: 10rpx; */
    box-shadow: 3rpx 3rpx 5rpx 6rpx #f5f5f5;
}

.banner-image {
    width: 35%;
    height: 100%;
    float: left;
    display: inline-flex;
}

.banner-context {
    width: 65%;
    height: 100%;
    float: left;
    /* padding: 30rpx; */
    /* display: inline-flex; */
}

.banner-context .description {
    font-size: 32rpx;
    height: 60%;
    padding: 20rpx 20rpx 0;
    overflow-wrap: break-word;
    word-wrap: break-word;
}

.banner-context .date {
    font-size: 25rpx;
    /* height: 40%; */
    color: #999;
    padding: 0rpx 20rpx 0rpx;
    /* padding: 30rpx; */
}