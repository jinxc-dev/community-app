.topBar {
    display: block;
    padding: 5px 30rpx;
    font-size: 12px;
    background-color: #da3925;
}

.search{
    /* margin-left: 15px; */
    padding: 10rpx 5px;
    font-size: 14px;
    color: #ffffff;
    background-color: #ec513f;
    border-radius: 10rpx;
}

.search .search-icon{
    margin: -2px 15rpx 0;    
    vertical-align: middle;
}

.owner-info {
    display: flex;
    padding: 50rpx 0;
}

.owner-info image.avatar {
    width: 200rpx;
    height: 200rpx;
    border: 10rpx solid #e5924c;
    border-radius: 50%;
}

.owner-info .detail {
    width: 430rpx;
    padding: 20rpx 0 10rpx 30rpx;
    font-size: 35rpx;
}

.owner-info .detail .name {
    color: #ffffff;
    display: flex;
    line-height: 1.0;
    
}

.owner-info .detail .tags {
    /* flex: 2; */
    background-color: #ffffff;
    border-radius: 20rpx;
    padding: 10rpx 15rpx;
    margin-left: 20rpx;
    color: #ec513f;
    font-size: 20rpx;
}

.owner-info .detail .info {
    padding: 20rpx 0 0;
    overflow-wrap: break-word;
    word-wrap: break-word;
    font-size: 30rpx;
    color: #e5924c;
}
.owner-info .detail .info .item {
    color: #ffffff;
    padding: 0 10rpx;
}

.item-header {
    position: relative;
    margin-right: 10px;
}
.item-header__icon {
    width: 60rpx; 
    height: 60rpx; 
    display: block;
    margin-right: 10px;
}

.item-header__title {
    font-size: 30rpx;
    color: #aaa;
}

.item-body {
    padding: 15rpx 30rpx;
    border-top: 1px solid #e9e9e9;
    border-bottom: 10rpx solid #f0eff4;
    color: #333;
}

.item-body__row {
    border-top:1px solid #e9e9e9;
}
.item-body__row:first-child {
    border-top:none;
}

.row-first {
    border-right: 1px solid #e9e9e9;
    padding: 15rpx 0;
}
.row-second {
    padding: 15rpx 0rpx 15rpx 30rpx;
}